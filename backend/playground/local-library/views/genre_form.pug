extend layout 

block content 

    h1 #{title}

    form(method='POST' action="")
        div.form-grop
        label(for='name') Genre: 
        input#name.form-control(type="text", placeholder="Fantasy, Poetry etc" name='name' value=(undifined===genre ? '':genre.name) )
        button.btn.btn-primary(type="Submit") Submit 
        if errors
            ul 
            for err in errors 
                li != err.msg 