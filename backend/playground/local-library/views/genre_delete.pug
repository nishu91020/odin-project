extends layout

block content 
    h1 #{genre.name}
    
    if genre_books.length>0
        p.text-danger #[strong You should delete all these books before attempting to delete this genre]
        div(style='margin-left:20px;margin-top:20px')
            h4 Books 

            dl 
                each book in genre_books 
                    dt 
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
                else 
                    p this genre has no books
    else 
        p.text-danger #[strong Do you really want to delete this genre?]
        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden' name="genreid" required=true value=genre._id)
            button.btn.btn-primary(type="submit") Delete